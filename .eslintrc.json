{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "worker": true
    },
    "globals": {
      "THREE": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "2017"
    },
    "rules": {
      "indent": ["warn", 2],
      "linebreak-style": ["warn", "unix"],
      "quotes": ["off", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": ["warn", "all"],
      "no-console": ["off"],
      "no-empty": ["warn"]
    }
}
